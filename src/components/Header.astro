---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
    <nav>
        <div class="flex items-center flex-grow my-6">
            <Hamburger />
            <h1 class="main-header">Roughly Understood</h1>
            <Navigation />
        </div>
        <ThemeIcon />
    </nav>
</header>

<style>
    header {
        background-color: #1f7a8c;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
